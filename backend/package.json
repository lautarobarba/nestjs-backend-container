{
	"name": "backend",
	"version": "0.0.1",
	"description": "Backend Template - NestJS",
	"author": "Lautaro Barba",
	"private": true,
	"engines": {
		"npm": ">=9.0.0",
		"node": ">=24.0.0"
	},
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"migration:show": "ts-node ./node_modules/typeorm/cli --dataSource src/database/data-source.ts migration:show",
		"migration:generate": "ts-node ./node_modules/typeorm/cli --dataSource src/database/data-source.ts migration:generate src/database/migrations/$npm_config_name",
		"migration:run": "ts-node ./node_modules/typeorm/cli --dataSource src/database/data-source.ts migration:run",
		"create-admin": "ts-node ./node_modules/typeorm/cli --dataSource src/database/data-source.ts query \"INSERT INTO users(email, firstname, lastname, password, status, role) VALUES('admin@admin.com', 'admin', 'admin', '2a0$PnRAugDwGCo3unlJELH/E.9Tkytn3W90zmdVK1hcZnQ8cFP9xUhNK', 'ACTIVE', 'ADMIN')\""
	},
	"dependencies": {
		"@nestjs-modules/mailer": "^2.0.2",
		"@nestjs/bull": "^11.0.4",
		"@nestjs/common": "^11.1.14",
		"@nestjs/config": "^4.0.3",
		"@nestjs/core": "^11.1.14",
		"@nestjs/jwt": "^11.0.2",
		"@nestjs/passport": "^11.0.5",
		"@nestjs/platform-express": "^11.1.14",
		"@nestjs/schedule": "^6.1.1",
		"@nestjs/swagger": "^11.2.6",
		"@nestjs/typeorm": "^11.0.0",
		"@nestjsx/crud": "^5.0.0-alpha.3",
		"@nestjsx/crud-typeorm": "^5.0.0-alpha.3",
		"bcryptjs": "^3.0.3",
		"bull": "^4.16.5",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.3",
		"cookie-parser": "^1.4.7",
		"dotenv": "^17.3.1",
		"express": "^5.2.1",
		"handlebars": "^4.7.8",
		"jsonwebtoken": "^9.0.3",
		"moment": "^2.30.1",
		"multer": "^2.0.2",
		"mv": "^2.1.1",
		"mysql": "^2.18.1",
		"nestjs-command": "^3.1.5",
		"nodemailer": "^8.0.1",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"pg": "^8.18.0",
		"reflect-metadata": "^0.2.2",
		"rimraf": "^6.1.3",
		"rxjs": "^7.8.2",
		"source-map-support": "^0.5.21",
		"swagger-ui-express": "^5.0.1",
		"typeorm": "^0.3.28",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@nestjs/cli": "^11.0.16",
		"@nestjs/schematics": "^11.0.9",
		"@nestjs/testing": "^11.1.14",
		"@types/bcryptjs": "^3.0.0",
		"@types/bull": "^4.10.4",
		"@types/cookie-parser": "^1.4.10",
		"@types/cron": "^2.4.3",
		"@types/dotenv": "^8.2.3",
		"@types/express": "^5.0.6",
		"@types/multer": "^2.0.0",
		"@types/node": "^25.3.0",
		"@types/nodemailer": "^7.0.10",
		"@types/passport": "^1.0.17",
		"@types/passport-jwt": "^4.0.1",
		"@types/supertest": "^6.0.3",
		"@types/yargs": "^17.0.35",
		"supertest": "^7.2.2",
		"ts-loader": "^9.5.4",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.3"
	}
}
